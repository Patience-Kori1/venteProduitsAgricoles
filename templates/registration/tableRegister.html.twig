{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container mt-5">

    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">Prix</th>
                <th scope="col">Quantité</th>
                <th scope="col">Date</th>
                <th scope="col">Catégorie</th>
                <th scope="col">Lien </th>
                <th scope="col">Description courte du produit</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        
        <tbody>

            {% for data in datas_users %}
            <tr>
                <th scope="row">{{data.id}}</th>
                    <td>{{data.email}}</td>
                    {# <td>{{data.roles}}</td> #}
                    <td>{{data.password}}</td>
                    <td>{{data.nom}}</td>
                    <td>{{data.prenom}}</td>
                    <td>{{data.adresse}}</td>
                    <td>{{data.ville}}</td>
                    <td>{{data.codePostal}}</td>
                    <td>{{data.telephone}}</td>
                    <td>{{data.dateInscription|date('d/m/Y')}}</td>
                    {# <td>{{data.categorie.nomCategorie}}</td>
                    <td><img style =" max-width: 150px" src="{{vich_uploader_asset(data, 'imageFile')}}" alt=""></td>
                    <td>{{data.descriptionCourte}}</td>
                    <td>
                        <a href="{{ path('update',{'id': data.id}) }}" class="btn btn-warning">Modifier</a>
                        <a href="{{ path('delete',{'id': data.id}) }}" class="btn btn-danger">Supprimer</a>
                        <a href="{{path('create')}}" class="btn btn-success">Ajout nouveau</a>
                    </td> #}
            </tr>
            {% endfor %}

        </tbody>
    </table>
        
</div>
</body>

{% endblock %}